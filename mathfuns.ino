void FracToTime(float DayAndFrac,int *hh,int *mm,int *ss){
	float Frac = 24*(DayAndFrac - floor(DayAndFrac));
	*hh = (int)(Frac);
	Frac = (Frac-*hh)*60;
	*mm = (int)(Frac);
	Frac = (Frac - *mm)*60;
	*ss = (int)(Frac);
}
//==================================================================================================
//==================================================================================================
float TimeToFrac(int hh,int mm,int ss){
	float Frac = (hh*3600.0 + mm*60. + ss)/86400.0;
	return(Frac);
}
