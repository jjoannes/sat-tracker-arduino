float WrapTo2Pi(float Angle){
	float WrappedAngle;
	if (sin(Angle)<0 && cos(Angle)<0){
		WrappedAngle = atan2(sin(Angle),cos(Angle))+2*pi;
	}
	else{
		WrappedAngle = atan2(sin(Angle),cos(Angle));
	}
	if (WrappedAngle<0){WrappedAngle += 2*pi;}
return(WrappedAngle);
}
